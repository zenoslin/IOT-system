<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    
    >
<RelativeLayout
        android:id="@+id/loginTop_setting"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/green"
        android:orientation="horizontal" >


        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="智 能 安 防 监 控"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        
     
    </RelativeLayout> 
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"   
        
        >
     <!-- <TextView
        android:id="@+id/aTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="报警提示：" 
        android:textSize="25dp"/> -->
    <!--  <TextView
        android:id="@+id/Tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:textSize="25dp"
        
        android:layout_marginLeft="15dp"/> -->
        
        
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >
        
        
       <TextView
        android:id="@+id/text_temp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="温    度："
        android:textColor="@color/black"
        android:textSize="25dp"/>
     <TextView
        android:id="@+id/temp"
       android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
         android:textColor="@color/red"
         
        android:textSize="25dp"
        /> 
        
      
       
     
    
    </LinearLayout>
 
    
    
     <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
     <TextView
        android:id="@+id/text_hum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="湿    度：" 
        android:textColor="@color/black"
        android:layout_weight="1"
        android:textSize="25dp"/>
     <TextView
        android:id="@+id/hum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/red"
        android:textSize="25dp"
         />
     
    
    </LinearLayout>

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
     <TextView
        android:id="@+id/text_light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="光    照：" 
        android:textColor="@color/black"
        android:layout_weight="1"
        android:textSize="25dp"/>
     <TextView
        android:id="@+id/light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/red"
        android:textSize="25dp"
         />
     
    
    </LinearLayout>
      <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
     <TextView
        android:id="@+id/text_smoke"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="烟    雾：" 
        android:textColor="@color/black"
        android:layout_weight="1"
        android:textSize="25dp"/>
     <TextView
        android:id="@+id/smoke"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/red"
        android:textSize="25dp"
         />
     
    
    </LinearLayout>
     <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
     <TextView
        android:id="@+id/text_rain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="下雨情况：" 
        android:textColor="@color/black"
        android:layout_weight="1"
        android:textSize="20dp"/>
     <TextView
        android:id="@+id/rain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/red"
        android:textSize="20dp"
         />
     
    
    </LinearLayout>
    <TextView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="5dp"
     android:text="灯1操作"
     android:textColor="@color/red"    
        />

     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
         android:orientation="horizontal" >

      <Button
          android:id="@+id/light1_on"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="开灯" />
      
       <Button
          android:id="@+id/light1_off"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="关灯" />  
     </LinearLayout>
  <TextView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="5dp"
     android:text="灯2操作"
     android:textColor="@color/red"    
        />

     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
         android:orientation="horizontal" >

      <Button
          android:id="@+id/light2_on"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="开灯" />
      
       <Button
          android:id="@+id/light2_off"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="关灯" />  
     </LinearLayout>    
    <LinearLayout 
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:layout_weight="2"
     >
          
      </LinearLayout>
     <TextView 
      android:id="@+id/tips"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="15dp"
      android:textColor="@color/red"       
         />
    
    
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_network"
            android:layout_width="160sp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:text="网络连接"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:background="@drawable/btnyuanjiao" />
             
        
        <Button
            android:id="@+id/btn_exit"
            android:layout_width="160sp"
            android:layout_height="50sp"
            android:layout_weight="1"
            android:text="退       出"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:background="@drawable/btnyuanjiao" />
    </TableRow>

</LinearLayout>
